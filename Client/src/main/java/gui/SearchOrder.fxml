<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<VBox alignment="CENTER" spacing="15" style="-fx-background-color: #f0f0f0;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.AcademicFrameController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label text="Order number:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <TextField fx:id="idtxt" style="-fx-font-size: 16;"/>
        <Region minWidth="0" prefWidth="0"/>
        <Button id="btnSend" fx:id="btnSend" onAction="#Send" text="Search" style="-fx-font-size: 16; -fx-padding: 10 20; -fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button id="btnExit" fx:id="btnExit" onAction="#getExitBtn" text="Exit" style="-fx-font-size: 16; -fx-padding: 10 20; -fx-background-color: #f44336; -fx-text-fill: white;"/>
    </children>
</VBox>